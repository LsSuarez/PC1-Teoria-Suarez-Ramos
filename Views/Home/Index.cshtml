@{
    ViewData["Title"] = "Formulario de Conversión de Moneda";
}

<h1>Formulario de Conversión de Moneda</h1>

<!-- Formulario para seleccionar monedas y cantidad -->
@using (Html.BeginForm("ChangeCurrency", "Home", FormMethod.Post))
{
    <div>
        <label for="fromCurrency">Moneda de Origen:</label>
        <select id="fromCurrency" name="fromCurrency">
            <option value="BRL">Real Brasileño (BRL)</option>
            <option value="PEN">Sol Peruano (PEN)</option>
            <option value="USD">Dólar Americano (USD)</option>
        </select>
    </div>
    <div>
        <label for="toCurrency">Moneda de Destino:</label>
        <select id="toCurrency" name="toCurrency">
            <option value="BRL">Real Brasileño (BRL)</option>
            <option value="PEN">Sol Peruano (PEN)</option>
            <option value="USD">Dólar Americano (USD)</option>
        </select>
    </div>
    <div>
        <label for="amount">Cantidad:</label>
        <input type="number" id="amount" name="amount" required />
    </div>
    <button type="submit">Hacer Cambio</button>
}
